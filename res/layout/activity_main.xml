<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/White"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingBottom="40dp" >

        <Button
            android:id="@+id/button_main_activity_add_cust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/main_activity_add_cust_button"
            android:gravity="center"
            android:height="60dp" />

        <Button
            android:id="@+id/button_main_activity_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_main_activity_add_cust"
            android:layout_alignBottom="@+id/button_main_activity_add_cust"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/button_main_activity_add_cust"
            android:background="@drawable/main_activity_list_button"
            android:height="60dp" />

        <Button
            android:id="@+id/button_main_activity_add_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_main_activity_add_cust"
            android:layout_alignBottom="@+id/button_main_activity_add_cust"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/button_main_activity_add_cust"
            android:background="@drawable/main_activity_add_money_button"
            android:height="60dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/totalmoneypending" />

        <TextView
            android:id="@+id/pendingmoney"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="30,000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#228784"
            android:layout_marginRight="10dp"
            android:textSize="42dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" 
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/button_main_activity_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_main_activity_setting"
            android:layout_alignBottom="@+id/button_main_activity_setting"
            android:layout_marginRight="44dp"
            android:layout_toLeftOf="@+id/button_main_activity_setting"
            android:background="@drawable/main_activity_sms_button"
            android:height="60dp" />

        <Button
            android:id="@+id/button_main_activity_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/main_activity_setting_button"
            android:height="60dp" />

    </RelativeLayout>

</LinearLayout>